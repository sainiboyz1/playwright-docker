{
  "name": "playwright-docker",
  "version": "1.0.0",
  "description": "Playwright tests running in Docker with Allure reporting",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "npx playwright test",
    "test": "rm -rf allure-results && playwright test",
    "test:headed": "npx playwright test --headed",
    "test:report": "npx allure generate allure-results --clean -o allure-report",
    "report:open": "npx allure open allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/node": "^24.0.0",
    "allure-commandline": "^2.20.1",
    "allure-playwright": "^3.2.2"
  }
}

